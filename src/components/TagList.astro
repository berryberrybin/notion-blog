---
interface Props {
  tags: string[];
  size?: "small" | "medium";
  linked?: boolean;
}

const { tags, size = "medium", linked = true } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class:list={["tag-list", size]}>
  {tags.map((tag) => (
    linked ? (
      <a href={`${base}tags/${encodeURIComponent(tag)}/`} class="tag">
        <span class="tag-hash">#</span>
        <span class="tag-name">{tag}</span>
      </a>
    ) : (
      <span class="tag">
        <span class="tag-hash">#</span>
        <span class="tag-name">{tag}</span>
      </span>
    )
  ))}
</div>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    background: var(--tag-bg);
    color: var(--tag-color);
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition-fast);
    border: 1px solid transparent;
  }

  .tag-hash {
    opacity: 0.7;
    margin-right: 0.125rem;
  }

  a.tag:hover {
    background: var(--tag-hover-bg);
    border-color: var(--honey);
    transform: translateY(-1px);
  }

  a.tag:active {
    transform: translateY(0) scale(0.98);
  }

  .small .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
  }

  .medium .tag {
    font-size: 0.85rem;
  }
</style>