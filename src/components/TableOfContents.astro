---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to show h1, h2, and h3
const filteredHeadings = headings.filter((h) => h.depth >= 1 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="toc">
    <h2 class="toc-title">Table of Contents</h2>
    <ul class="toc-list">
      {filteredHeadings.map((heading) => (
        <li class:list={["toc-item", `depth-${heading.depth}`]}>
          <a href={`#${heading.slug}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    margin-bottom: 1.5rem;
    max-height: 70vh;
    overflow-y: auto;
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-muted);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0.15rem 0;
  }

  .toc-item.depth-1 {
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .toc-item.depth-1:first-child {
    margin-top: 0;
  }

  .toc-item.depth-2 {
    padding-left: 0.75rem;
  }

  .toc-item.depth-3 {
    padding-left: 1.5rem;
  }

  .toc-link {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.8rem;
    line-height: 1.5;
    transition: color 0.2s;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .toc-item.depth-1 .toc-link {
    color: var(--text-color);
    font-size: 0.85rem;
  }

  .toc-link:hover {
    color: var(--accent-color);
  }
</style>
