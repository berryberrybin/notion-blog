---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to show h1, h2, and h3
const filteredHeadings = headings.filter((h) => h.depth >= 1 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="toc">
    <div class="toc-header">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="8" y1="6" x2="21" y2="6"/>
        <line x1="8" y1="12" x2="21" y2="12"/>
        <line x1="8" y1="18" x2="21" y2="18"/>
        <line x1="3" y1="6" x2="3.01" y2="6"/>
        <line x1="3" y1="12" x2="3.01" y2="12"/>
        <line x1="3" y1="18" x2="3.01" y2="18"/>
      </svg>
      <h2 class="toc-title">On this page</h2>
    </div>
    <ul class="toc-list">
      {filteredHeadings.map((heading) => (
        <li class:list={["toc-item", `depth-${heading.depth}`]}>
          <a href={`#${heading.slug}`} class="toc-link">
            <span class="toc-indicator"></span>
            <span class="toc-text">{heading.text}</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.25rem;
    max-height: 70vh;
    overflow-y: auto;
    transition: border-color var(--transition-fast);
  }

  .toc:hover {
    border-color: var(--honey);
  }

  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color);
    color: var(--honey);
  }

  .toc-title {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-muted);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0.125rem 0;
  }

  .toc-item.depth-1 {
    margin-top: 0.625rem;
  }

  .toc-item.depth-1:first-child {
    margin-top: 0;
  }

  .toc-item.depth-2 {
    padding-left: 0.875rem;
  }

  .toc-item.depth-3 {
    padding-left: 1.75rem;
  }

  .toc-link {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.8rem;
    line-height: 1.5;
    padding: 0.375rem 0.5rem;
    border-radius: 6px;
    transition: all var(--transition-fast);
  }

  .toc-indicator {
    flex-shrink: 0;
    width: 4px;
    height: 4px;
    margin-top: 0.5em;
    background: var(--border-color);
    border-radius: 50%;
    transition: all var(--transition-fast);
  }

  .toc-text {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .toc-item.depth-1 .toc-link {
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--text-color);
  }

  .toc-item.depth-1 .toc-indicator {
    width: 6px;
    height: 6px;
    background: var(--honey);
    border-radius: 2px;
  }

  .toc-link:hover {
    color: var(--honey);
    background: var(--hover-bg);
  }

  .toc-link:hover .toc-indicator {
    background: var(--honey);
  }

  /* Scrollbar */
  .toc::-webkit-scrollbar {
    width: 4px;
  }

  .toc::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 2px;
  }
</style>