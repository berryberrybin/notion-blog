<style>
  .footer {
    margin-top: auto;
    border-top: 1px solid var(--border-color);
    padding: 2.5rem 1.5rem;
    background: var(--bg-secondary);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--honey);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
  }

  .footer-name {
    font-size: 1.125rem;
    font-weight: 700;
    background: var(--gradient-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-info {
    text-align: center;
  }

  .copyright {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .powered-by {
    color: var(--text-light);
    font-size: 0.8rem;
    margin-top: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    flex-wrap: wrap;
  }

  .powered-by a {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--text-muted);
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    transition: all var(--transition-fast);
  }

  .powered-by a:hover {
    color: var(--honey);
    background: var(--hover-bg);
  }

  @media (max-width: 768px) {
    .footer {
      padding-bottom: 5rem;
    }
  }
</style>