---
import type { Post } from "../utils/posts";
import { formatDate } from "../utils/posts";

interface Props {
  post: Post;
}

const { post } = Astro.props;
const { title, slug, summary, category, tags, publishedAt, updatedAt } = post.data;
const base = import.meta.env.BASE_URL;
---

<article class="post-card">
  <a href={`${base}posts/${slug}/`} class="post-link">
    <div class="post-meta">
      <span class="category">{category}</span>
      <span class="meta-dot"></span>
      <time datetime={publishedAt || updatedAt}>
        {formatDate(publishedAt || updatedAt)}
      </time>
    </div>

    <h2 class="post-title">{title}</h2>

    {summary && <p class="post-summary">{summary}</p>}

    {tags.length > 0 && (
      <div class="post-tags">
        {tags.slice(0, 3).map((tag) => (
          <span class="tag">#{tag}</span>
        ))}
      </div>
    )}
  </a>
</article>

<style>
  .post-card {
    position: relative;
    padding: 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    background: var(--card-bg);
    transition: all 0.2s ease;
    height: 100%;
  }

  .post-card:hover {
    border-color: var(--text-muted);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px var(--shadow-color);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.875rem;
    font-size: 0.8rem;
  }

  .category {
    color: var(--text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .meta-dot {
    width: 3px;
    height: 3px;
    background: var(--text-light);
    border-radius: 50%;
  }

  time {
    color: var(--text-light);
    font-weight: 400;
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.4;
    color: var(--text-color);
    transition: color 0.15s ease;
    letter-spacing: -0.01em;
  }

  .post-card:hover .post-title {
    color: var(--honey);
  }

  .post-summary {
    color: var(--text-muted);
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0.75rem 0 0 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .tag {
    font-size: 0.75rem;
    color: var(--text-light);
    font-weight: 400;
  }

  /* Simple mode adjustments */
  :global([data-theme="simple"]) .post-card:hover .post-title,
  :global([data-theme="simple-dark"]) .post-card:hover .post-title {
    color: var(--text-color);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
</style>