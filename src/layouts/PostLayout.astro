---
import BaseLayout from "./BaseLayout.astro";
import TableOfContents from "../components/TableOfContents.astro";
import TagList from "../components/TagList.astro";
import { formatDate } from "../utils/posts";

interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  title: string;
  description?: string;
  category: string;
  tags: string[];
  publishedAt: string | null;
  updatedAt: string;
  headings: Heading[];
}

const { title, description, category, tags, publishedAt, updatedAt, headings } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={title} description={description}>
  <article class="post">
    <header class="post-header">
      <div class="post-meta">
        <a href={`${base}categories/${encodeURIComponent(category)}/`} class="category">
          {category}
        </a>
        {publishedAt && (
          <time datetime={publishedAt} class="date">
            {formatDate(publishedAt)}
          </time>
        )}
        <span class="updated">
          Updated: {formatDate(updatedAt)}
        </span>
      </div>

      <h1 class="post-title">{title}</h1>

      {tags.length > 0 && (
        <div class="post-tags">
          <TagList tags={tags} />
        </div>
      )}
    </header>

    <div class="post-body">
      <aside class="sidebar">
        <TableOfContents headings={headings} />
      </aside>

      <div class="post-content">
        <slot />
      </div>
    </div>

    <footer class="post-footer">
      <a href={`${base}posts/`} class="back-link">
        &larr; Back to Posts
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .category {
    background: var(--accent-bg);
    color: var(--accent-color);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
  }

  .category:hover {
    background: var(--accent-color);
    color: white;
  }

  .date {
    color: var(--text-muted);
  }

  .updated {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .post-title {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 1rem 0;
    color: var(--text-color);
  }

  .post-tags {
    margin-top: 1rem;
  }

  .post-body {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .post-body {
      grid-template-columns: 1fr 250px;
    }

    .sidebar {
      order: 2;
      position: sticky;
      top: 5rem;
      height: fit-content;
    }

    .post-content {
      order: 1;
    }
  }

  .post-content {
    line-height: 1.8;
  }

  .post-content :global(h1) {
    font-size: 2rem;
    font-weight: 700;
    margin: 2.5rem 0 1.25rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid var(--accent-color);
    color: var(--text-color);
  }

  .post-content :global(h2) {
    font-size: 1.6rem;
    font-weight: 600;
    margin: 2rem 0 1rem 0;
    padding-left: 0.75rem;
    border-left: 4px solid var(--accent-color);
    color: var(--text-color);
  }

  .post-content :global(h3) {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    color: var(--text-color);
    position: relative;
    padding-left: 1rem;
  }

  .post-content :global(h3)::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--accent-color);
    font-weight: bold;
  }

  .post-content :global(h4) {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 1.25rem 0 0.5rem 0;
    color: var(--text-muted);
  }

  .post-content :global(p) {
    margin: 1rem 0;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin: 0.5rem 0;
  }

  .post-content :global(pre) {
    background: var(--code-bg);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .post-content :global(code) {
    font-family: "Fira Code", "Consolas", monospace;
  }

  .post-content :global(:not(pre) > code) {
    background: var(--code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--accent-color);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-muted);
    font-style: italic;
  }

  .post-content :global(a) {
    color: var(--accent-color);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    text-decoration: none;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .post-content :global(th),
  .post-content :global(td) {
    border: 1px solid var(--border-color);
    padding: 0.75rem;
    text-align: left;
  }

  .post-content :global(th) {
    background: var(--card-bg);
    font-weight: 600;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-color);
  }

  .back-link {
    color: var(--accent-color);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
